{
  "name": "expressjs",
  "version": "1.0.0",
  "description": "Demo Web based project using Node.js and Express",
  "main": "app/app.js",
  "scripts": {
    "start": "nodemon -e css,ejs,js,json --watch app --ignore feedback.json",
    "test": "mocha",
    "docker:build": "docker build -t krishna/node-web-app .",
    "docker:login": "docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD",
    "docker:push": "docker push krishna/node-web-app:latest",
    "ci:docker": "npm run docker:build && npm run docker:login && npm run docker:push"
  },
  "author": "Krishna Thapa",
  "license": "Demo",
  "dependencies": {
    "body-parser": "^1.15.2",
    "ejs": "^2.6.2",
    "express": "^4.17.1",
    "mocha": "^6.2.0",
    "socket.io": "^2.2.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0"
  }
}
